{
  "name": "ksChromeExtensionBoilerplateAngularSlack",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Boilerplate for Chrome Extension with Angular and Slack",
  "homepage_url": "http://google.com",
  "icons": {},
  "permissions":["storage"],
  "default_locale": "en",
  "background": {
    "scripts": [
      "bower_components/angular/angular.js",
      "bower_components/angular-ui-router/release/angular-ui-router.js",
      "js/app.js",
      "js/controllers.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "js/app.js",
        "js/controllers.js"
      ]
    }
  ]
}
